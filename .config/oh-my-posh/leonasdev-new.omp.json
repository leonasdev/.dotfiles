{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "transient_prompt": {
    "template": "[{{ .Segments.Time.Text }}]<#5ca8cc> \u276f</> ",
    "foreground": "#999982",
    "background": "transparent"
  },
  "console_title_template": "{{.Shell}} in {{.PWD}}",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "properties": {
            "cache_duration": "none"
          },
          "template": " <#5ca8cc>\ueb99 </>{{ .UserName }} <#cccca5>at</> ",
          "foreground": "#5ca8cc",
          "type": "session",
          "style": "diamond"
        },
        {
          "type": "time",
          "style": "plain",
          "foreground": "#5ca8cc",
          "template": "{{ .CurrentDate | date .Format}}",
          "properties": {
            "time_format": "2006-01-02 03:04"
          }
        }
      ],
      "newline": true
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "shell",
          "style": "plain",
          "foreground": "#5ca8cc",
          "properties": {
            "mapped_shell_names": {
              "fish": "fish"
            }
          }
        },
        {
            "foreground": "#cccca5",
            "properties": {
              "style": "full"
            },
            "style": "plain",
            "template": "{{ .Path }} ",
            "type": "path"
        },
        {
          "type": "git",
          "style": "plain",
          "properties": {
            "branch_icon": "\ue725 ",
            "cache_duration": "none",
            "fetch_status": true,
            "fetch_upstream_icon": true
          },
          "template": "{{ .HEAD }} {{ if .Working.Changed }}{{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}</>{{ end }} ",
          "foreground": "#78ba8d",
          "foreground_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}#caa944{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#cc5f29{{ end }}",
            "{{ if gt .Ahead 0 }}#c480bd{{ end }}",
            "{{ if gt .Behind 0 }}#c480bd{{ end }}"
          ]
        },
        {
          "type": "status",
          "style": "plain",
          "template": "[{{ .String }}]",
          "foreground_templates": [
            "{{ if .Error }}#e94969{{ end }}"
          ],
          "properties": {
            "always_enabled": false
          }
        }
      ],
      "newline": true
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "properties": {
            "cache_duration": "none"
          },
          "template": "\u276f ",
          "foreground": "#5ca8cc",
          "type": "text",
          "style": "plain"
        }
      ]
    }
  ],
  "version": 3
}
